<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Funcoes.Editar">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nome:"
        android:textSize="30dp"
        android:id="@+id/textView2"
        android:layout_marginTop="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtNome"
        android:textSize="30dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/btAtualiza"
        android:layout_alignStart="@+id/btAtualiza"
        android:layout_above="@+id/txtAula" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Aula  :"
        android:textSize="30dp"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtAula"
        android:textSize="30dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/textView2"
        android:layout_alignLeft="@+id/txtNome"
        android:layout_alignStart="@+id/txtNome" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/sss"
        android:id="@+id/btAtualiza"
        android:layout_marginBottom="65dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtNumEstrela"
        android:layout_gravity="center"
        android:layout_alignBottom="@+id/btAlteraEstrela"
        android:layout_alignTop="@+id/btAlteraEstrela"
        android:layout_toRightOf="@+id/imageView2"
        android:layout_toStartOf="@+id/btAtualiza"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+"
        android:id="@+id/btAlteraEstrela"
        android:onClick="adiEstrela"
        android:layout_above="@+id/btAtualiza"
        android:layout_alignRight="@+id/txtAula"
        android:layout_alignEnd="@+id/txtAula" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageView2"
        android:background="@drawable/estrela"
        android:layout_alignTop="@+id/txtNumEstrela"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edtQtd"
        android:layout_above="@+id/btAtualiza"
        android:hint="Altere valor de estrelinhas"
        android:layout_alignTop="@+id/txtNumEstrela"
        android:layout_alignLeft="@+id/btAtualiza"
        android:layout_alignStart="@+id/btAtualiza"
        android:layout_toLeftOf="@+id/btAlteraEstrela"
        android:layout_toStartOf="@+id/btAlteraEstrela" />

    <Button
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/lixo"
        android:id="@+id/btExcluir"
        android:layout_below="@+id/edtQtd"
        android:layout_toLeftOf="@+id/btAlteraEstrela"
        android:layout_toStartOf="@+id/btAlteraEstrela" />

</RelativeLayout>
